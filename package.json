{
  "name": "zombie-hunter",
  "version": "1.0.0",
  "description": "Un shooter top-down nerveux et addictif contre des hordes de zombies",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run tests/unit",
    "test:unit:watch": "vitest tests/unit",
    "test:unit:coverage": "vitest run tests/unit --coverage",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julien-riel/zombie-hunter.git"
  },
  "keywords": [
    "game",
    "phaser",
    "typescript",
    "zombie",
    "shooter"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/julien-riel/zombie-hunter/issues"
  },
  "homepage": "https://github.com/julien-riel/zombie-hunter#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^4.0.16",
    "canvas": "^3.2.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "phaser": "^3.90.0"
  }
}
